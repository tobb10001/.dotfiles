[pull]
	rebase = true
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
[alias]
	amend = commit --amend --no-edit
	broom = !git branch --merged | grep -Ev '(^\\*|main|master|dev)' | xargs --no-run-if-empty git branch -d
	cam = commit -am
	git = !git
	gone = !git branch -av | grep -F "[gone]" | awk -F' ' '{ print $1 }' | xargs --no-run-if-empty git branch -D
	last = log -1 HEAD
	pullsh = !sh -c 'git pull && git push'
	pushsc = push -o ci.skip
	todo = grep -Eni '\\btodo\\b'

	statu = status
	tree = !git ls-files | tree --fromfile .
	pust = push
[init]
	defaultBranch = main
[core]
	excludesfile = ~/.config/git/ignore
	attributesFile = ~/.config/git/attributes
[diff "jupyternotebook"]
	command = git-nbdiffdriver diff
[merge "jupyternotebook"]
	driver = git-nbmergedriver merge %O %A %B %L %P
	name = jupyter notebook merge driver

[merge]
	tool = vimdiff
[mergetool]
	keepBackup = false
[mergetool "vimdiff"]
	cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[push]
	autoSetupRemote = true
[fetch]
	prune = true

[include]
	path = ~/.config/git/config.local
